<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="root" stylesheets="@stlyle.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chess.chessgui.GuiController">
   <children>
      <HBox spacing="15.0">
         <children>
            <VBox fx:id="boardContainer" minHeight="400.0" minWidth="400.0" />
            <VBox spacing="10.0" styleClass="border_left">
               <children>
                  <ToggleButton fx:id="freePlaceToggle" minWidth="100.0" mnemonicParsing="false" text="Free Place" />
                  <VBox spacing="5.0" styleClass="border_top">
                     <children>
                        <Label text="Players:" />
                        <HBox alignment="CENTER" spacing="10.0">
                           <children>
                              <Label minWidth="45.0" text="White:" />
                              <ComboBox fx:id="whiteChoiceCB" prefWidth="150.0" />
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                        <HBox alignment="CENTER" layoutX="22.0" layoutY="90.0" spacing="10.0">
                           <children>
                              <Label minWidth="45.0" text="Black:" />
                              <ComboBox fx:id="blackChoiceCB" prefWidth="150.0" />
                           </children>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </HBox>
                     </children>
                     <padding>
                        <Insets bottom="5.0" top="5.0" />
                     </padding>
                  </VBox>
                  <Button fx:id="gameControlButton" minWidth="100.0" mnemonicParsing="false" text="Start Game" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
